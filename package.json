{
  "name": "9c-launcher",
  "productName": "Nine Chronicles",
  "version": "3.0.0",
  "description": "Game Launcher for Nine Chronicles",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/planetarium/9c-launcher"
  },
  "private": true,
  "type": "module",
  "author": "Planetarium <engineering@planetariumhq.com>",
  "main": "packages/main/dist/index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -Ap run build",
    "compile": "cross-env MODE=production yarn run build && electron-builder build --config electron-builder.mjs --dir --config.asar=false",
    "test": "yarn workspaces foreach -Ap run test",
    "test:e2e": "vitest run",
    "dev": "node scripts/watch.js",
    "lint": "eslint .",
    "typecheck": "yarn workspaces foreach -Ap run typecheck",
    "postinstall": "cross-env ELECTRON_RUN_AS_NODE=1 electron scripts/update-electron-vendors.js",
    "format": "yarn workspaces foreach -Ap run format"
  },
  "devDependencies": {
    "@npmcli/map-workspaces": "^4.0.1",
    "@types/node": "20.16.2",
    "@typescript-eslint/eslint-plugin": "8.3.0",
    "cross-env": "7.0.3",
    "electron": "33.0.2",
    "electron-builder": "25.1.8",
    "eslint": "9.9.1",
    "eslint-plugin-react": "^7.37.2",
    "globals": "^15.11.0",
    "nano-staged": "0.8.0",
    "playwright": "1.46.1",
    "simple-git-hooks": "2.11.1",
    "typescript": "5.5.4",
    "vite": "^5.4.10",
    "vitest": "^2.1.3"
  },
  "dependencies": {
    "@9c-launcher/main": "workspace:*",
    "electron-store": "^10.0.0"
  },
  "packageManager": "yarn@4.5.1+sha512.341db9396b6e289fecc30cd7ab3af65060e05ebff4b3b47547b278b9e67b08f485ecd8c79006b405446262142c7a38154445ef7f17c1d5d1de7d90bf9ce7054d"
}
